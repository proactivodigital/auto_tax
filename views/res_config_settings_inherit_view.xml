<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record id="res_config_settings_view_form_inherit_account" model="ir.ui.view">
            <field name="name">res.config.settings.view.form.inherit.account</field>
            <field name="model">res.config.settings</field>
            <field name="inherit_id" ref="account.res_config_settings_view_form"/>
            <field name="arch" type="xml">
                <div class="row mt16 o_settings_container" name="default_taxes_setting_container" position="before">
                    <div id="custom_settings_uvt">
                        <div class="row mt16 o_settings_container" name="custom_setting_container">
                            <div class="col-xs-12 col-md-6 o_settings_box" id="custom_setting">
                                <div class="o_setting_right_pane">
                                    <div class="o_row">
                                        <label for="uvt_value_tax" class="o_form_label">Valor UVT</label>
                                        <div class="o_input">
                                            <field name="uvt_value_tax" class="o_input"/>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </field>
        </record>
    </data>
</odoo>
